// CSS Reset
@import "reset"

// Stylus mixins
@import "mixins"

html 
  background transparent url('/images/cubes.png') scroll repeat 0 0;

.controls
  background-color #FFF
  width 500px
  margin 0 auto
  margin-top 30px
  padding-bottom 30px
  z-index: -2;
  box-shadow(0px 2px 7px -2px #888888);

a
  -webkit-tap-highlight-color rgba(0,0,0,0)

#gauge
  height 400px
  width 500px
  margin 0 auto

#gauge-actions
  margin-top -50px
  line-height 60px
  text-align center
  position relative

#powered
  text-align center
  margin-top 30px

a.slower,
a.faster
  font-family helvetica, sans-serif
  display inline-block
  text-decoration none
  color #666

  i
    position absolute
    font-size 60px
    bottom 0

a.slower
  i
    left 60px

a.faster
  i
    right 60px

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) 
  /* Retina-specific stuff here */
  html
    background transparent url('/images/cubes_@2X.png') scroll repeat 0 0;
    background-size: 67px 100px;

@media only screen and (min-device-width: 320px) and (max-device-width: 480px)
  body
    width 300px
    margin-top 10px

  #gauge
    height 300px
    width 270px

  a.slower
    margin-right 2.4em

  a.faster
    margin-left 2.4em
